---
import { type CollectionEntry } from "astro:content";

type Props = CollectionEntry<"projects">;

const project = Astro.props;
const { name, title, year, url } = project.data;
const { Content } = await project.render();
---

<div
  class="grid grid-cols-[1fr_3fr] grid-rows-[auto_auto_1fr] sm:grid-cols-[110px_auto] gap-2 font-medium bg-zinc-100 dark:bg-zinc-800 dark:text-zinc-100 p-4 rounded-lg"
>
  <div class="flex flex-col gap-1 col-span-2 col-start-1 row-start-1">
    <a
      href={url}
      target="_blank"
      class="dark:hover:text-zinc-300 hover:text-zinc-500"
    >
      {name}
    </a>
    <span
      class="text-nowrap text-xs text-zinc-700 dark:text-zinc-300 font-mono"
    >
      {year}
    </span>
  </div>
  <h1 class="text-base font-bold mb-0 pb-0 col-span-2 col-start-2 row-start-1">
    {title}
  </h1>
  <article class="project-description sm:col-span-1 sm:col-start-2 col-span-2">
    <Content />
  </article>
</div>
